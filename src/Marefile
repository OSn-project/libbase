// Source Marefile

configurations = { Debug, Relase }

libfile = "libbase.a"

targets = {
	lib = cppStaticLibrary + {
		input   = "*.o"
		output  = "$(libfile)"
		command = "ar -rcs $(output) $(input)"
		
		buildDir = "."
		cppFlags = "-Wno-unused-label"

		if configuration == "Debug" {
			cppFlags += "-g"
		}

		files = {
			"*.cpp" = cppSource + {cppFlags += "-isystem ../include/"}
			"*.c"   = cSource
		}
	}
}
